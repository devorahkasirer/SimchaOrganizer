<div class="row">
    <div class="well col-md-6 col-md-offset-3">
        <form method="post" action="/contributor/AddContributor">
            <input type="text" class="form-control" name="firstName" placeholder="First Name" />
            <br />
            <input type="text" class="form-control" name="lastName" placeholder="Last Name" />
            <br />
            <input type="text" class="form-control" name="phoneNumber" placeholder="Cell" />
            <br />
            <input type="text" class="form-control" name="deposit" placeholder="Initial Deposit" />
            <br />
            <label>Always Include</label>
            <input type="checkbox" class="form-control" name="alwaysInclude" value="true" />
            <input type="hidden" value="false" name="alwaysInclude" />
            <br />
            <button class="btn btn-success">Add Contributor</button>
        </form>
    </div>
</div>